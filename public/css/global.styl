/*
 * Import nib
 */
@import 'nib'

/*
 * Nib provides a CSS reset
 */
global-reset()

@font-face
  font-family 'EB Garamond'
  font-style normal

a
  color #692323
  text-decoration none
  display inline

a:active
  color #676565

a:link
  color #676565
  text-decoration none

a:visited
  color #676565
  text-decoration none

a:focus
  color #676565
  text-decoration none

a:hover
  color #692323
  text-decoration none

body
  color #676565
  font-family 'EB Garamond', serif
  font-size 16px

  padding 10px 20px

strong
  font-weight 800

h1
  font-size 37px
  font-weight 100
  text-transform uppercase
  letter-spacing:19px
  margin 40px 0 30px 0

h2
  color #692323
  font-size 18px
  font-weight 100
  letter-spacing:0.15em
  margin 40px 0 20px 0

h3
  font-size 16px
  font-weight 100
  letter-spacing:0.35em

.navigation
  margin-bottom 40px

  ul
    color #676565
    span
      padding 0 5px

    li
      display inline
      list-style-type none

.sub-navigation

  width 140px
  float left

  a:active
    color #692323

  a:link
    color #692323
    text-decoration none

  a:visited
    color #692323
    text-decoration none

  a:focus
    color #692323
    text-decoration none

  a:hover
    color #692323
    text-decoration underline

  ul
    li
      margin-bottom 20px

.gallery

  position absolute
  margin-left 150px

  img
    padding 2px 4px
    background-image url('/images/loader.gif')
    background-position center
    background-repeat no-repeat

  a
    display inline-block

  a:hover
    opacity 0.8

@media (max-width: 1024px)
  .gallery
    margin-left 0

  .sub-navigation
    float none
    padding-bottom 30px
    ul
      li
        display inline
        padding-right 15px
  body
    font-size 27px

  h1
    font-size 47px



@media (max-width: 640px)
  .gallery
    text-align: center;
  h1
    font-size 53px
    margin 40px 0 30px 0

.splash
  img
     display block
     margin 0 auto
     height auto
     max-height 700px
     max-width 100%
     // This ensures images are only displayed by javascript.
     visibility hidden
