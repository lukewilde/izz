@font-face
  font-family 'EB Garamond'
  font-style normal

a
  color #692323
  text-decoration none
  display inline

a:active
  color #676565

a:link
  color #676565
  text-decoration none

a:visited
  color #676565
  text-decoration none

a:focus
  color #676565
  text-decoration none

a:hover
  color #692323
  text-decoration none

body
  color #676565
  font-family 'EB Garamond', serif
  font-size 16px

  padding 10px 20px

strong
  font-weight 800

h1
  font-size 37px
  font-weight 100
  text-transform uppercase
  letter-spacing:19px
  margin 40px 0 30px 0

h2
  color #692323
  font-size 18px
  font-weight 100
  letter-spacing:0.15em
  margin 40px 0 20px 0

h3
  font-size 16px
  font-weight 100
  letter-spacing:0.35em

@media (max-width: 1024px)
  body
    font-size 27px

  h1
    font-size 47px

@media (max-width: 640px)
  h1
    font-size 53px
    margin 40px 0 30px 0

.preload
  width 0
  height 0