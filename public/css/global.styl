/*
 * Import nib
 */
@import 'nib'

/*
 * Nib provides a CSS reset
 */
global-reset()

@font-face
  font-family 'EB Garamond'
  font-style normal

a
  color #692323
  text-decoration none
  display inline

a:active
  color #676565

a:link
  color #676565
  text-decoration none

a:visited
  color #676565
  text-decoration none

a:focus
  color #676565
  text-decoration none

a:hover
  color #692323
  text-decoration none

body
  color #676565
  font-family 'EB Garamond', serif
  padding 10px 20px
  margin 0 22px

strong
  font-weight 800

h1
  font-size 37px
  font-weight 100
  text-transform uppercase
  letter-spacing:19px
  margin 40px 0 30px 0

h2
  color #692323
  font-size 18px
  font-weight 100
  letter-spacing:0.15em
  margin 40px 0 20px 0

h3
  font-size 16px
  font-weight 100
  letter-spacing:0.35em

.navigation
  margin-bottom 40px

  ul
    color #676565
    span
      padding 0 5px

    li
      display inline
      list-style-type none

.sub-navigation

  width 140px
  float left

  a:active
    color #692323

  a:link
    color #692323
    text-decoration none

  a:visited
    color #692323
    text-decoration none

  a:focus
    color #692323
    text-decoration none

  a:hover
    color #692323
    text-decoration underline

  ul
    li
      margin-bottom 20px

.gallery
  line-height 0
  -webkit-column-count 5
  -webkit-column-gap 0px
  -moz-column-count 5
  -moz-column-gap 0px
  column-count 5
  column-gap 0px

  img
    padding 2px 4px
    width 100%

  a
    width 100%
    height auto
    display inline-block

  a:hover
    opacity 0.8


@media (max-width: 1800px)
  .gallery
    -moz-column-count 5
    -webkit-column-count 5
    column-count 5

@media (max-width: 1500px)
  .gallery
    -moz-column-count 4
    -webkit-column-count 4
    column-count 4

@media (max-width: 1200px)
  .gallery
    -moz-column-count 3
    -webkit-column-count 3
    column-count 3

@media (max-width: 800px)
  .gallery
    -moz-column-count 3
    -webkit-column-count 3
    column-count 2

@media (max-width: 600px)
  .gallery
    -moz-column-count 1
    -webkit-column-count 1
    column-count 1
    float none
  .sub-navigation
    float none
    padding-bottom 30px
    ul
      li
        display inline
        padding-right 15px

.splash
  img
     display block
     margin-left auto
     margin-right auto