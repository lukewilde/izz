.navigation
  margin-bottom 40px

  ul
    color #676565
    span
      padding 0 5px

    li
      display inline
      list-style-type none

.sub-navigation

  width 140px
  float left

  a:active
    color #692323

  a:link
    color #692323
    text-decoration none

  a:visited
    color #692323
    text-decoration none

  a:focus
    color #692323
    text-decoration none

  a:hover
    color #692323
    text-decoration underline

  ul
    li
      margin-bottom 20px

@media (max-width: 1024px)

  .sub-navigation
    float none
    padding-bottom 30px
    ul
      li
        display inline
        padding-right 15px