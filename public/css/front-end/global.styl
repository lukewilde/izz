header
  width 251px
  float left

.main-content
  position absolute
  left 255px

.tool-bar
  height 30px

.images

  line-height 0
  -webkit-column-count 4
  -webkit-column-gap 6px
  -moz-column-count 4
  -moz-column-gap 6px
  column-count 4
  column-gap 6px
  margin-right 6px

  img
    margin 3px
    width 336px
    vertical-align inherit
    width 100% !important
    height auto !important

@media (max-width 1638px)
  .images
    -moz-column-count 3
    -webkit-column-count 3
    column-count 3

@media (max-width 1100px)
  .images
    -moz-column-count 2
    -webkit-column-count 2
    column-count 2


@media (max-width 768px)
  .main-content
    position relative
    left 0

    .images
      -moz-column-count inherit
      -webkit-column-count inherit
      column-count inherit
