header
  width 251px
  float left

.main-content
  position absolute
  left 255px

.tool-bar
  height 30px

.images

  /* Prevent vertical gaps */
  line-height: 0;

  -webkit-column-count: 4;
  -webkit-column-gap:   3px;
  -moz-column-count:    4;
  -moz-column-gap:      3px;
  column-count:         4;
  column-gap:           3px;

  img

    margin 3px
    width 336px
    vertical-align inherit


@media (max-width: 1638px) {
  .images {
    -moz-column-count:    3;
    -webkit-column-count: 3;
    column-count:         3;
  }
}
@media (max-width: 1000px) {
  .images {
    width 999px
  -moz-column-count:    3;
  -webkit-column-count: 3;
  column-count:         3;
  }
}
@media (max-width: 800px) {
  .images {
  -moz-column-count:    2;
  -webkit-column-count: 2;
  column-count:         2;
  }
}
@media (max-width: 400px) {
  .images {
  -moz-column-count:    1;
  -webkit-column-count: 1;
  column-count:         1;
  }
}
