extends layout
block content
  .sub-navigation
    ul
      li
        a(href='#portrait') Portrait
      li
        a(href='#lifestyle') Lifestyle
      li
        a(href='#travel') Travel
  .gallery
    each section, index in sections
      - var visible = (index === 0) ? 'visible' : 'none'
      - console.log(index, visible)
      .section(data-section=section.name, display=visible)
        each image in section.images
          a(href='/images/' + image.src)
            img(src='/images/' + image.src, alt=image.name, data-id=image.slug)